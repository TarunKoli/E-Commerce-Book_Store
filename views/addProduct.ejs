<%- include('includes/head.ejs') %>
   <style>
      .container2{
         margin-left: 550px;
         margin-top: 60px;
         font-family: sans-serif;
      }
      .Input{
         margin-top: 30px; 
         font-size: 25px; 
      }
      .Input2{
         border: 2px solid springgreen;
         border-radius: 5px;
         width: 450px;
         height: 30px;
         font-size: 22px;
      }
      .invalid{
         border: 2px solid red;
         border-radius: 5px;
         width: 450px;
         height: 30px;
         font-size: 22px;
      }
      .area{
         border: 2px solid springgreen;
         border-radius: 5px;
      }
      .btn1{
         border: 2px solid springgreen;
         border-radius: 5px;
         font-size: 20px;
         height: 40px;
         width: 200px;
         font-weight: bold;
      }
      .btn1:hover{
         background-color: springgreen;
         color: white;
      }
      #error{
         background-color: rgb(248, 176, 176);
         border: 2px dotted red;
         border-radius: 3px;
         color: red;
         width: 400px;
         height: 40px;
         text-align: center;
         padding-top:5px ;
      }
   </style>
</head>
<body>
   <%- include('includes/navigation.ejs') %>
   <% var validationErrors,errorMsg; %>
   <main class="container2">
      <% if (errorMsg) { %>
         <div id="error"><%= errorMsg %></div>
      <% } %>
   
      <form action="/addProduct" method="POST" enctype="multipart/form-data">
         <div class="Input">
            <label for="title">Title</label><br>
            <input type="text" name="title"  class="<%= validationErrors.find(e => e.param === 'title') ? 'invalid' : 'Input2' %>" value="<%= oldInput.title %>">
         </div>
         <div class="Input">
            <label for="image">Image</label><br>
            <input type="file" name="image" class="Input2">
         </div>
         <div class="Input">
            <label for="price">Price</label><br>
            <input type="text"  name="price"  class="<%= validationErrors.find(e => e.param === 'price') ? 'invalid' : 'Input2' %>" value="<%= oldInput.price %>">
         </div>
         <div class="Input">
            <label for="description">Description</label><br>
            <textarea name="description" cols="60" rows="5"  class="<%= validationErrors.find(e => e.param === 'title') ? 'invalid' : 'area' %>"><%= oldInput.description %></textarea>
         </div><br>
         <input type="hidden" name="_csrf" value="<%= csrfToken %>">
         <button type="submit" class="btn1">AddProduct</button>
      </form>
   </main>

</body>
</html>