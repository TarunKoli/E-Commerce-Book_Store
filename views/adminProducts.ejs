<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="shop.css">
</head>
<body>
   <%- include('includes/navigation.ejs') %>

   <% if (prods.length > 0) { %>
      <% for (let product of prods) { %>
         
         <div class="container3">
            <h3 class="set"><%= product.title %></h3>
            <img src="/<%=product.image%>" alt="Book Image" height="180px" width="299px" class="set">
            <h3 class="set" style="margin: 0px;" >$<%= product.price %></h3><br>
            <div class="desc"><%= product.description %></div>
            <form action="/edit/<%=product._id%>" method="GET" style="display: inline-block;">
               <button type="submit" class="btn2">Edit</button>
            </form>
            <form action="/delete" method="POST" style="display: inline-block;">
               <input type="hidden" name="productId" value="<%=product._id%>">
               <input type="hidden" name="_csrf" value="<%= csrfToken %>">
               <button type="submit" class="btn2">Delete</button>
            </form>
         </div>

      <% } %>
   <% } else { %>
      <h1>No Products Found</h1>
   <% } %>

</body>
</html>