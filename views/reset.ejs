<%- include('includes/head.ejs') %>
   <style>
      .container2{
         margin-left: 550px;
         margin-top: 60px;
         font-family: sans-serif;
      }
      .Input{
         margin-top: 30px; 
         font-size: 25px; 
      }
      .Input2{
         border: 2px solid springgreen;
         border-radius: 5px;
         width: 450px;
         height: 30px;
         font-size: 22px;
      }
      .area{
         border: 2px solid springgreen;
         border-radius: 5px;
      }
      .btn1{
         border: 2px solid springgreen;
         border-radius: 5px;
         font-size: 20px;
         height: 40px;
         width: 200px;
         font-weight: bold;
      }
      .btn1:hover{
         background-color: springgreen;
         color: white;
      }
      #error{
         background-color: rgb(248, 176, 176);
         border: 2px dotted red;
         border-radius: 3px;
         color: red;
         width: 400px;
         height: 30px;
         text-align: center;
         padding-top:5px ;
      }
   </style>
</head>
<body>
   <%- include('includes/navigation.ejs') %>

   <main class="container2">
      <% if (errorMsg) { %>
         <div id="error"><%= errorMsg %></div>
      <% } %>
      <form action="/reset" method="POST">
         <div class="Input">
            <label for="email">Email</label><br>
            <input type="text" name="email" class="Input2">
         </div><br>
         <input type="hidden" name="_csrf" value="<%= csrfToken %>">
         <button type="submit" class="btn1">Reset Password</button>
      </form>
   </main>

</body>
</html>